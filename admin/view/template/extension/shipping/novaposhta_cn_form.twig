											<div class="input-group">
												<input type="text" name="payment_control" value="{{ payment_control }}" placeholder="{{ entry_payment_control }}" id="input-payment_control" class="form-control" />
												<span class="input-group-addon">{{ text_grn }}</span>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
