                }

                break;

            case 'input-elevator':
                if ($('#input-elevator:checked').val()) {
                    $('#input-rise_on_floor').attr('disabled', true);
                } else {
                    $('#input-rise_on_floor').attr('disabled', false);
                }

                break;
        }
    }

