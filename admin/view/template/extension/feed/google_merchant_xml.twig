{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-feed" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-feed" class="form-horizontal">
		 <div class="help-link"><a href="https://support.google.com/merchants/answer/7052112?hl=ru" target="_blank">{{ text_help_link }} Google</a></div>
		 <div class="help-link"><a href="https://www.facebook.com/business/help/125074381480892?id=725943027795860" target="_blank">{{ text_help_link }} Facebook</a></div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="google_merchant_xml_status" id="input-google_merchant_xml_status" class="form-control">
                {% if google_merchant_xml_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
		  <div class="form-group">
			<label class="col-sm-2 control-label" for="input-google_merchant_xml_currency">{{ entry_currency }}</label>
			  <div class="col-sm-10">
                 <select name="google_merchant_xml_currency" id="input-google_merchant_xml_currency" class="form-control">
                    {% for currency in currencies %}
                        {% if currency.code == google_merchant_xml_currency %}
							<option value="{{ currency.code }}" selected="selected">({{ currency.code }}) {{ currency.title }}</option>
                        {% else %}
							<option value="{{ currency.code }}">({{ currency.code }}) {{ currency.title }}</option>
                        {% endif %}
                    {% endfor %}
                 </select>
			</div>
		  </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_identifier">{{ text_identifier }}</label>
            <div class="col-sm-10">
              <select name="google_merchant_xml_identifier" id="input-google_merchant_xml_identifier" class="form-control">
                {% if google_merchant_xml_identifier  ==  'product_id' %}
                <option value="product_id" selected="selected">{{ text_id }}</option>
                <option value="model">{{ text_model }}</option>
                {% elseif  google_merchant_xml_identifier  ==  'model' %}
                <option value="product_id">{{ text_id }}</option>
                <option value="model" selected="selected">{{ text_model }}</option>
                 {% else %}
				<option value="product_id" selected="selected">{{ text_id }}</option>
                <option value="model">{{ text_model }}</option>
				{% endif %} 
              </select>
            </div>
          </div> 
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_key">{{ entry_google_merchant_xml_key }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_key" value="{{ google_merchant_xml_key }}" id="input-google_merchant_xml_key" class="form-control" />
                </div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_google_merchant_xml_links }}</label>
               <div class="col-sm-10">
               		<b>{{ text_feed_merchant }}</b> <a href="{{ link_merchant }}{% if google_merchant_xml_key %}&key={{ google_merchant_xml_key }}{% endif %}" target="_blank"><b>{{ link_merchant }}{% if google_merchant_xml_key %}&key={{ google_merchant_xml_key }}{% endif %}</b></a><br>
					<b>{{ text_feed_facebook }}</b> <a href="{{ link_facebook }}{% if google_merchant_xml_key %}&key={{ google_merchant_xml_key }}{% endif %}" target="_blank"><b>{{ link_facebook }}{% if google_merchant_xml_key %}&key={{ google_merchant_xml_key }}{% endif %}</b></a><br><br>
					<b>Cron Command:</b><br><b>php -f {{ link_cron }}</b><br><br> 
					<b>{{ text_feed_cron }}</b><br>
					<a href="{{ link_cron_merchant }}" target="_blank"><b>{{ link_cron_merchant }}</b></a><br>
					<a href="{{ link_cron_facebook }}" target="_blank"><b>{{ link_cron_facebook }}</b></a><br>
					<br> 

					<b>{{ text_feed_help }}</b>
               </div>
			</div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_condition">{{ entry_google_merchant_xml_condition }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_condition" value="{{ google_merchant_xml_condition }}" id="input-google_merchant_xml_condition" class="form-control" />
                </div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_gtin">{{ entry_google_merchant_xml_gtin }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_gtin" value="{{ google_merchant_xml_gtin }}" id="input-google_merchant_xml_gtin" class="form-control" />
                </div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_mpn">{{ entry_google_merchant_xml_mpn }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_mpn" value="{{ google_merchant_xml_mpn }}" id="input-google_merchant_xml_mpn" class="form-control" />
                </div>
		  </div>
			<div class="form-group">
             <label class="col-sm-2 control-label" for="input-category">{{ entry_category }}
			 <br>
			 <a href="http://www.google.com/basepages/producttype/taxonomy-with-ids.ru-RU.xls" target="_blank">{{ text_category_google }}</a><br><br>
			 <a href="https://support.google.com/merchants/answer/6324436?hl=ru" target="_blank">google_product_category HELP</a><br>
			 <a href="https://support.google.com/merchants/answer/6324406?hl=ru" target="_blank">product_type HELP</a><br>
			 <a href="https://support.google.com/merchants/answer/6324469?hl=ru" target="_blank">condition HELP</a><br>
			 <a href="https://support.google.com/google-ads/answer/6275295?hl=ru" target="_blank"> custom_label HELP</a>
			 </label>
                <div class="col-sm-10">
                  <div class="well well-sm" style="max-height: 400px; overflow: auto;">
                    <table class="table table-striped">
                    {% for category in categories %}
                    <tr>
                      <td class="checkbox">
                        <label>
						  {% if category.category_id in google_merchant_xml_category %}
                          <input type="checkbox" name="google_merchant_xml_category[]" value="{{ category.category_id }}" checked="checked" />
                          <b>{{ category['name'] }}</b>
                          {% else %}
                          <input type="checkbox" name="google_merchant_xml_category[]" value="{{ category.category_id }}" />
                          <b>{{ category['name'] }}</b>
                          {% endif %}
                        </label>
						<table class="table table-striped table-bordered">
							<tr>
								<td class="text-left">google_product_category <input type="text" name="google_merchant_xml_category_google_category[{{category.category_id}}]" value="{{ google_merchant_xml_category_google_category[category.category_id] }}" class="form-control"/></td>
								<td class="text-left">product_type <input type="text" name="google_merchant_xml_category_product_type[{{category.category_id}}]" value="{{ google_merchant_xml_category_product_type[category.category_id] }}" class="form-control"/></td>
								<td class="text-left">condition <input type="text" name="google_merchant_xml_category_condition[{{category.category_id}}]" value="{{ google_merchant_xml_category_condition[category.category_id] }}" class="form-control"/></td>
								<td class="text-left">custom_label_0 <input type="text" name="google_merchant_xml_category_custom_label_0[{{category.category_id}}]" value="{{ google_merchant_xml_category_custom_label_0[category.category_id] }}" class="form-control"/></td>
								<td class="text-left">custom_label_1 <input type="text" name="google_merchant_xml_category_custom_label_1[{{category.category_id}}]" value="{{ google_merchant_xml_category_custom_label_1[category.category_id] }}" class="form-control"/></td>
								<td class="text-left">custom_label_2 <input type="text" name="google_merchant_xml_category_custom_label_2[{{category.category_id}}]" value="{{ google_merchant_xml_category_custom_label_2[category.category_id] }}" class="form-control"/></td>
								<td class="text-left">custom_label_3 <input type="text" name="google_merchant_xml_category_custom_label_3[{{category.category_id}}]" value="{{ google_merchant_xml_category_custom_label_3[category.category_id] }}" class="form-control"/></td>
								<td class="text-left">custom_label_4 <input type="text" name="google_merchant_xml_category_custom_label_4[{{category.category_id}}]" value="{{ google_merchant_xml_category_custom_label_4[category.category_id] }}" class="form-control"/></td>
							</tr>
						</table>
                      </td>
                    </tr>
                    {% endfor %}
                    </table>
                  </div>
                  <a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_select_all }}</a> / <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_unselect_all }}</a></div>
          </div>
		  <div class="form-group">
             <label class="col-sm-2 control-label" for="input-manufacturer">{{ entry_manufacturer }}</label>
                <div class="col-sm-10">
                  <div class="well well-sm" style="max-height: 400px; overflow: auto;">
                    <table class="table table-striped">
                    {% for manufacturer in manufacturers %}
                    <tr>
                      <td class="checkbox">
                        <label>
						  {% if manufacturer.manufacturer_id in google_merchant_xml_manufacturer %}
                          <input type="checkbox" name="google_merchant_xml_manufacturer[]" value="{{ manufacturer['manufacturer_id'] }}" checked="checked" />
                          {{ manufacturer.name }}
                          {% else %}
                          <input type="checkbox" name="google_merchant_xml_manufacturer[]" value="{{ manufacturer['manufacturer_id'] }}" />
                          {{ manufacturer.name }}
                          {% endif %}
                        </label>
                      </td>
                    </tr>
                     {% endfor %}
                    </table>
                  </div>
                  <a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_select_all }}</a> / <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_unselect_all }}</a></div>
          </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-google_merchant_xml_customer_group">{{ entry_customer_group }}</label>
                  <div class="col-sm-10">
                    <select name="google_merchant_xml_customer_group" id="input-google_merchant_xml_customer_group" class="form-control">
                      {% for customer_group in customer_groups %}
                      {% if customer_group.customer_group_id == google_merchant_xml_customer_group %}
                      <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
                      {% else %}
                      <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
                      {% endif %}
                      {% endfor %}
                    </select>
                  </div>
                </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_custom_sql">{{ entry_google_merchant_xml_custom_sql }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_custom_sql" value="{{ google_merchant_xml_custom_sql }}" id="input-google_merchant_xml_custom_sql" class="form-control" />
                </div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_special">{{ entry_google_merchant_xml_special }}</label>
            <div class="col-sm-10">
              <select name="google_merchant_xml_special" id="input-google_merchant_xml_special" class="form-control">
                {% if google_merchant_xml_special %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
				{% endif %} 
              </select>
            </div>
          </div> 
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_min_price">{{ entry_google_merchant_xml_min_price }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_min_price" value="{{ google_merchant_xml_min_price }}" id="input-google_merchant_xml_min_price" class="form-control" />
                </div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_max_price">{{ entry_google_merchant_xml_max_price }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_max_price" value="{{ google_merchant_xml_max_price }}" id="input-google_merchant_xml_max_price" class="form-control" />
                </div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_zero_quantity">{{ entry_google_merchant_xml_zero_quantity }}</label>
            <div class="col-sm-10">
              <select name="google_merchant_xml_zero_quantity" id="input-google_merchant_xml_zero_quantity" class="form-control">
                {% if google_merchant_xml_zero_quantity %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
				{% endif %} 
              </select>
            </div>
          </div> 
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_original_description">{{ entry_google_merchant_xml_original_description }}</label>
            <div class="col-sm-10">
              <select name="google_merchant_xml_original_description" id="input-google_merchant_xml_original_description" class="form-control">
                {% if google_merchant_xml_original_description %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
				{% endif %} 
              </select>
            </div>
          </div> 
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_multiplier">{{ entry_google_merchant_xml_multiplier }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_multiplier" value="{{ google_merchant_xml_multiplier }}" id="input-google_merchant_xml_multiplier" class="form-control" />
                </div>
		  </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_original_image_status">{{ entry_google_merchant_xml_original_image_status }}</label>
            <div class="col-sm-10">
              <select name="google_merchant_xml_original_image_status" id="input-google_merchant_xml_original_image_status" class="form-control">
                {% if google_merchant_xml_original_image_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
				{% endif %} 
              </select>
            </div>
          </div> 
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_additional_images">{{ entry_google_merchant_xml_additional_images }}</label>
            <div class="col-sm-10">
              <select name="google_merchant_xml_additional_images" id="input-google_merchant_xml_additional_images" class="form-control">
                {% if google_merchant_xml_additional_images %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
				{% endif %} 
              </select>
            </div>
          </div> 
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-google_merchant_xml_utm">{{ entry_google_merchant_xml_utm }}</label>
                <div class="col-sm-10">
					<input type="text" name="google_merchant_xml_utm" value="{{ google_merchant_xml_utm }}" id="input-google_merchant_xml_utm" class="form-control" />
                </div>
		  </div>
        </form>
      </div>
    </div>
	<div class="credits">{{ text_credits }}</div>
  </div>
</div>
{{ footer }}