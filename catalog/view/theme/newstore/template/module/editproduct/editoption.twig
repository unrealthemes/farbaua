<script type="text/javascript">
function saveEditorOption() {
	$.ajax({
			url: 'index.php?route=module/editproduct/editoption/saveEditorOption&product_id={{ product_id }}',
			type: 'post',
			dataType: 'json',
			data: $('#option-form').serialize(),
			beforeSend: function() {
				$('.popup-alert').remove();
				$('#option-form').prepend('<div id="loading_img_svg"></div>');
				$('#option-form').css('opacity',0.5);
				loading_img_svg(true);
			},
			complete: function() {
				loading_img_svg(false);
				$('#option-form').css('opacity',1);
			},
			success: function(json) {				
				$('.popup-alert').remove();
				if (json['error']) {
					$('#option-form').before('<div class="popup-alert alert alert-danger"><i class="fa fa-info-circle"></i> '+ json['error'] +' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}
				if (json['success']) {
					$('#option-form').before('<div class="popup-alert alert alert-success"><i class="fa fa-info-circle"></i> '+ json['success'] +' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				location.reload();
				}
			},
			error: function(xhr, ajaxOptions, thrownError) {
				alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
			}
		});	
};
</script>
