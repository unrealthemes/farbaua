<div class="nextprevprod btn-group">
    {% if (products['prev'] is defined) %} 
		<button id="prev-prod-btn" type="button" onclick="location.href='{{ products['prev']['href'] }}'"  class="btn btn-default">{{ products['prev']['name'] }}</button>
	{% endif %} 
    {% if (products['next'] is defined) %} 
		<button id="next-prod-btn" type="button" onclick="location.href='{{ products['next']['href'] }}'" class="btn btn-default">{{ products['next']['name'] }}</button>
    {% endif %} 
	<script>
	{% if (products['prev'] is defined) %} 
	$('#prev-prod-btn').popover({
		html: true,
		placement: 'bottom',
		trigger: 'hover',
		content: function() {
			html  = '<div class="popover-pr-image"><img class="img-responsive" src="{{ products['prev']['image'] }}" title="" alt="" /></div>';
			html += '<div class="popover-pr-name">{{ products['prev']['name'] }}</div>';
			html += '<div class="price">';
			html += '	{% if (products['prev']['price']) %}';
			html += '	  {% if (not products['prev']['special']) %}';
			html += '		<span>{{ products['prev']['price'] }}</span>';
			html += '	  {% else %}';
			html += '		<span class="price-old"><span>{{ products['prev']['price'] }}</span></span> <span class="price-new"><span>{{ products['prev']['special'] }}</span></span>';
			html += '	  {% endif %}';
			html += '	{% endif %}';
			html += '</div>';
			return html;
		}
	});
	 {% endif %} 
	 {% if (products['next'] is defined) %} 
	$('#next-prod-btn').popover({
		html: true,
		placement: 'bottom',
		trigger: 'hover',
		content: function() {
			html  = '<div class="popover-pr-image"><img class="img-responsive" src="{{ products['next']['image'] }}" title="" alt="" /></div>';
			html += '<div class="popover-pr-name">{{ products['next']['name'] }}</div>';
			html += '<div class="price">';
			html += '	{% if (products['next']['price']) %}';
			html += '	  {% if (not products['next']['special']) %}';
			html += '		<span>{{ products['next']['price'] }}</span>';
			html += '	  {% else %}';
			html += '		<span class="price-old"><span>{{ products['next']['price'] }}</span></span> <span class="price-new"><span>{{ products['next']['special'] }}</span></span>';
			html += '	  {% endif %}';
			html += '	{% endif %}';
			html += '</div>';	
			return html;
		}
	});
	{% endif %} 
	</script>
	<style>
	.nextprevprod {
		display: inline-block;
		width:100%;
		margin-bottom: 5px;
	}
	.nextprevprod .popover{
        max-width:150px;
		width:150px;
		font-family:Roboto Condensed, sans-serif;
    }
	#next-prod-btn,
	#prev-prod-btn {
		width: 50%;
		text-overflow: ellipsis;
		overflow: hidden;
	}
	#next-prod-btn{
	border-radius:0px 4px 4px 0px;
	}
	.popover-pr-image img {
		margin:0 auto;
	}
	.popover-pr-name {
		font-size:14px;
		color:#000;
		font-weight:400;
	}
	.nextprevprod .price span {
		font-size:14px;
	}
	.nextprevprod .price .price-new span {
		font-weight: 600;
		color: #E55B4C;
		font-size:14px;
	}
	.nextprevprod .price .price-old span {
		color: #999999;
		font-size: 14px;
	}
	
	</style>
</div>
<div class="clearfix"></div>
