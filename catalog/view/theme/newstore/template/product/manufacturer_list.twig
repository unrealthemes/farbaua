{{ header }}
<div class="container">
  <ul class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
    {% for i,breadcrumb in breadcrumbs %}
      {% if (i+1 < breadcrumbs|length) %}
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
          <a itemprop="item" href="{{ breadcrumb['href'] }}">
            {% if (i == 0) %}
              <meta itemprop="name" content="{{ text_home_ns }}" />
              <span>{{ breadcrumb['text'] }}</span>
            {% else %}
              <span itemprop="name">{{ breadcrumb['text'] }}</span>
            {% endif %}
          </a>
          <meta itemprop="position" content="{{ i+1 }}" />
          </li>
      {% else %}
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
        <link itemprop="item" href="{{ breadcrumb['href'] }}">
        {% if (i == 0) %}
          <meta itemprop="name" content="{{ text_home_ns }}" />
          <span>{{ breadcrumb['text'] }}</span>
        {% else %}
          <span itemprop="name">{{ breadcrumb['text'] }}</span>
        {% endif %}
        <meta itemprop="position" content="{{ i+1 }}" />
        </li>
      {% endif %}
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-4 col-md-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-8 col-md-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      {% if categories %}
      <p class="alphabetical_index"><span>{{ text_index }}</span> {% for category in categories %}
        &nbsp;&nbsp;&nbsp;<a href="javascript:void(0)" onclick="$('html, body').animate({ scrollTop: $('#{{ category.name }}').offset().top - 55}, 200); return false;">{{ category.name }}</a> {% endfor %} </p>
      {% for category in categories %}
      <div class="manufacturer-heading"><a id="{{ category.name }}">{{ category.name }}</a></div>
      {% if category.manufacturer %}
      {% for manufacturers in category.manufacturer|batch(4) %}
      <div class="row {% if (show_image_brand is defined and (show_image_brand == 1)) %}manufacturer-content{% endif %}">
        {% for manufacturer in manufacturers %}
        <div class="col-xs-6 col-sm-3">
          <a href="{{ manufacturer.href }}">
            {% if (show_image_brand is defined and (show_image_brand == 1)) %}
              <div class="thumb-brand"><img class="img-responsive" src="{{ manufacturer['image'] }}" title="{{ manufacturer['name'] }}"></div>
              <div class="name-brand">{{ manufacturer['name'] }}</div>
            {% else %}
              {{ manufacturer['name'] }}
            {% endif %}
          </a>
        </div>
        {% endfor %} </div>
      {% endfor %}
      {% endif %}
      {% endfor %}
      {% else %}
      <p>{{ text_empty }}</p>
      <div class="buttons clearfix">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}